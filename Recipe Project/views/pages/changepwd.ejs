<!--
    Displaying the change password image.
-->
<div id="site-main">
    <div class="container">
        <form class="form-signin" method="POST" action="/savechangepwd/<%= slug%>">
            <h1 class="h3 mb-3 font-weight-normal text-center">Change Password</h1>

            <input type="password" name="pwd" class="form-control mb-3" placeholder="New Password"  required autofocus>
            <input type="password" name="pwd-repeat" class="form-control mb-3" placeholder="Repeat New Password" required autofocus>
            
            <button class="btn btn-lg btn-orange btn-block" type="submit">Change Password</button>
            </form>
    </div>
</div>